<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui_musteri.musteriActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/siparis_ver_musteri_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="Sipariş Ver"
        android:textAllCaps="false"
        android:onClick="siparisVerActivityGit"/>
    <Button
        android:id="@+id/sepet_musteri_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="Sepet"
        android:textAllCaps="false"
        android:onClick="sepetActivityGit"/>
    <Button
        android:id="@+id/gecmis_siparis_musteri_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="Geçmiş Siparişlerim"
        android:textAllCaps="false"
        android:onClick="gecmisSiparisActivityGit"/>

    <Button
        android:id="@+id/bilgi_guncelle_musteri_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/textColor"
        android:text="Adresimi Güncelle/Değiştir"
        android:textAllCaps="false"
        android:onClick="musteriBilgileriGuncelleGit"/>




</GridLayout>